{
  "version": 1.0,
  "name": "shortly-frontend",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://shortly-url-shorter-backend.onrender.com/api/$1",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/l/(.*)",
      "dest": "https://shortly-url-shorter-backend.onrender.com/api/url/$1",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "handle": "filesystem"
    },
    {
      "src": ".*",
      "dest": "/index.html",
      "status": 200
    }
  ]
}
